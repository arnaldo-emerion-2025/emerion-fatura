procedure TfmManDn2_NFE.FormCreate(Sender: TObject);
begin
  inherited;
  fmManDn1_NFE.FatDev.Edit;
end;

procedure TfmManDn2_NFE.FormKeyDown(Sender: TObject; var Key: Word; Shift: TShiftState);
begin
  inherited;

  if key = 27 then bRetornar.OnClick(Sender);

  if key = 123 then bContinuar.OnClick(Sender);

end;

procedure TfmManDn2_NFE.bcontinuarClick(Sender: TObject);
begin

  ActiveControl := nil;

  fmmandn1_nfe.FatDevCodCf1.Value := Trim(fmmandn1_nfe.FatDevCodCf1.Value);
  fmmandn1_nfe.FatDevCodCf2.Value := Trim(fmmandn1_nfe.FatDevCodCf2.Value);
  fmmandn1_nfe.FatDevDesNat.Value := Trim(fmmandn1_nfe.FatDevDesNat.Value);
  fmmandn1_nfe.FatDevInsSub.Value := Trim(fmmandn1_nfe.FatDevInsSub.Value);
  fmmandn1_nfe.FatDevNomTra.Value := Trim(fmmandn1_nfe.FatDevNomTra.Value);
  fmmandn1_nfe.FatDevCgcTra.Value := Trim(fmmandn1_nfe.FatDevCgcTra.Value);
  fmmandn1_nfe.FatDevInsTra.Value := Trim(fmmandn1_nfe.FatDevInsTra.Value);
  fmmandn1_nfe.FatDevTenTra.Value := Trim(fmmandn1_nfe.FatDevTenTra.Value);
  fmmandn1_nfe.FatDevEndTra.Value := Trim(fmmandn1_nfe.FatDevEndTra.Value);
  fmmandn1_nfe.FatDevRefTra.Value := Trim(fmmandn1_nfe.FatDevRefTra.Value);
  fmmandn1_nfe.FatDevNumTra.Value := Trim(fmmandn1_nfe.FatDevNumTra.Value);
  fmmandn1_nfe.FatDevBaiTra.Value := Trim(fmmandn1_nfe.FatDevBaiTra.Value);
  fmmandn1_nfe.FatDevCidTra.Value := Trim(fmmandn1_nfe.FatDevCidTra.Value);
  fmmandn1_nfe.FatDevUfeTra.Value := Trim(fmmandn1_nfe.FatDevUfeTra.Value);
  fmmandn1_nfe.FatDevCepTra.Value := Trim(fmmandn1_nfe.FatDevCepTra.Value);
  fmmandn1_nfe.FatDevNroDev.Value := Trim(fmmandn1_nfe.FatDevNroDev.Value);
  fmmandn1_nfe.FatDevEspDev.Value := Trim(fmmandn1_nfe.FatDevEspDev.Value);
  fmmandn1_nfe.FatDevMarDev.Value := Trim(fmmandn1_nfe.FatDevMarDev.Value);  
  fmmandn1_nfe.FatDevPlcTra.Value := Trim(fmmandn1_nfe.FatDevPlcTra.Value);
  fmmandn1_nfe.FatDevUfePlc.Value := Trim(fmmandn1_nfe.FatDevUfePlc.Value);
  fmmandn1_nfe.FatDevTefCli.Value := Trim(fmmandn1_nfe.FatDevTefCli.Value);
  fmmandn1_nfe.FatDevEnfCli.Value := Trim(fmmandn1_nfe.FatDevEnfCli.Value);
  fmmandn1_nfe.FatDevRffCli.Value := Trim(fmmandn1_nfe.FatDevRffCli.Value);
  fmmandn1_nfe.FatDevNrfCli.Value := Trim(fmmandn1_nfe.FatDevNrfCli.Value);
  fmmandn1_nfe.FatDevBafCli.Value := Trim(fmmandn1_nfe.FatDevBafCli.Value);
  fmmandn1_nfe.FatDevCifCli.Value := Trim(fmmandn1_nfe.FatDevCifCli.Value);
  fmmandn1_nfe.FatDevUffCli.Value := Trim(fmmandn1_nfe.FatDevUffCli.Value);
  fmmandn1_nfe.FatDevCefCli.Value := Trim(fmmandn1_nfe.FatDevCefCli.Value);
  fmmandn1_nfe.FatDevTenCli.Value := Trim(fmmandn1_nfe.FatDevTenCli.Value);
  fmmandn1_nfe.FatDevEndCli.Value := Trim(fmmandn1_nfe.FatDevEndCli.Value);
  fmmandn1_nfe.FatDevRefCli.Value := Trim(fmmandn1_nfe.FatDevRefCli.Value);
  fmmandn1_nfe.FatDevNumCli.Value := Trim(fmmandn1_nfe.FatDevNumCli.Value);
  fmmandn1_nfe.FatDevCgeCli.Value := Trim(fmmandn1_nfe.FatDevCgeCli.Value);
  fmmandn1_nfe.FatDevIneCli.Value := Trim(fmmandn1_nfe.FatDevIneCli.Value);
  fmmandn1_nfe.FatDevBaiCli.Value := Trim(fmmandn1_nfe.FatDevBaiCli.Value);
  fmmandn1_nfe.FatDevCidCli.Value := Trim(fmmandn1_nfe.FatDevCidCli.Value);
  fmmandn1_nfe.FatDevUfeCli.Value := Trim(fmmandn1_nfe.FatDevUfeCli.Value);
  fmmandn1_nfe.FatDevCepCli.Value := Trim(fmmandn1_nfe.FatDevCepCli.Value);

  if (Trim(fmmandn1_nfe.FatDevTenTra.Value) <> '') or
     (Trim(fmmandn1_nfe.FatDevEndTra.Value) <> '') or
     (Trim(fmmandn1_nfe.FatDevRefTra.Value) <> '') or
     (Trim(fmmandn1_nfe.FatDevBaiTra.Value) <> '') or
     (Trim(fmmandn1_nfe.FatDevCidTra.Value) <> '') or
     (Trim(fmmandn1_nfe.FatDevUfeTra.Value) <> '') or
     (Trim(fmmandn1_nfe.FatDevCepTra.Value) <> '') then begin

     if Trim(fmmandn1_nfe.FatDevUfeTra.Value) = '' then
        fmsgErro('Campo de preenchimento obrigatório não informado.',EdUfeTra);
        
     if fmmandn1_nfe.FatDevId_TraUfe.Value = 0 then
        fmsgErro('Campo de preenchimento obrigatório não informado.',EdUfeTra);

     if fmmandn1_nfe.FatDevId_TraCie.Value = 0 then
        fmsgErro('Campo de preenchimento obrigatório não informado.',EdId_TraCie);

  end;

  if fmmandn1_nfe.FatDevId_FinUff.Value = 0 then
     fmsgErro('Campo de preenchimento obrigatório não informado.',EdUffCli);

  if fmmandn1_nfe.FatDevId_FinCif.Value = 0 then
     fmsgErro('Campo de preenchimento obrigatório não informado.',EdId_FinCif);

  if fmmandn1_nfe.FatDevId_FinUfe.Value = 0 then
     fmsgErro('Campo de preenchimento obrigatório não informado.',EdId_FinUfe);

  if fmmandn1_nfe.FatDevId_FinCie.Value = 0 then
     fmsgErro('Campo de preenchimento obrigatório não informado.',EdId_FinCie);

  with fmmandn1_nfe.FatDev do begin

       fmManGDB.dbMain.StartTransaction; {Inicia a Transação};

       try

          ApplyUpdates; {Tenta aplicar as alterações};

          fmManGDB.dbMain.Commit; {confirma todas as alterações fechando a transação};

       except

          fmManGDB.dbMain.Rollback; {desfaz as alterações se acontecer um erro};

          if fmmandn1_nfe.FatDev.State = dsBrowse then fmmandn1_nfe.FatDev.Edit;

          EdDesNat.SetFocus;

          raise;

       end;

       CommitUpdates; {sucesso!, limpa o cache...}

  end;

  fmmandn1_nfe.FatDev.Close;                
  fmmandn1_nfe.FatDev.Open;

  fmmandn1_nfe.pnBasIcm.Caption := FormatFloat('###,###,##0.00',fmmandn1_nfe.FatDevBasIcm.Value);
  fmmandn1_nfe.pnTotIcm.Caption := FormatFloat('###,###,##0.00',fmmandn1_nfe.FatDevTotIcm.Value);
  fmmandn1_nfe.pnBasSub.Caption := FormatFloat('###,###,##0.00',fmmandn1_nfe.FatDevBasSub.Value);
  fmmandn1_nfe.pnTotSub.Caption := FormatFloat('###,###,##0.00',fmmandn1_nfe.FatDevTotSub.Value);
  fmmandn1_nfe.pnTotFat.Caption := FormatFloat('###,###,##0.00',fmmandn1_nfe.FatDevTotFat.Value);
  fmmandn1_nfe.pnTotFrt.Caption := FormatFloat('###,###,##0.00',fmmandn1_nfe.FatDevTotFrt.Value);
  fmmandn1_nfe.pnTotSeg.Caption := FormatFloat('###,###,##0.00',fmmandn1_nfe.FatDevTotSeg.Value);
  fmmandn1_nfe.pnTotDes.Caption := FormatFloat('###,###,##0.00',fmmandn1_nfe.FatDevTotDes.Value);
  fmmandn1_nfe.pnTotIpi.Caption := FormatFloat('###,###,##0.00',fmmandn1_nfe.FatDevTotIpi.Value);
  fmmandn1_nfe.pnTotGer.Caption := FormatFloat('###,###,##0.00',fmmandn1_nfe.FatDevTotGer.Value);

  try

     fmManDn3_NFE := TfmManDn3_NFE.Create(Self);
     fmManDn3_NFE.ShowModal;

  finally

     FreeAndNil(fmManDn3_NFE);

  end;

  if fmmandn1_nfe.Finalizar = 'S' then
     Close
  else
     begin

     fmmandn1_nfe.FatDev.Close;
     fmmandn1_nfe.FatDev.Open;

     fmmandn1_nfe.FatDev.Edit;

     EdDesNat.SetFocus;

  end;
end;

procedure TfmManDn2_NFE.FormShow(Sender: TObject);
begin
  inherited;

  CodTra_Ant := fmmandn1_nfe.FatDevCodTra.Value;
  UfeTra_Ant := fmmandn1_nfe.FatDevUfeTra.Value;
  UffCli_Ant := fmmandn1_nfe.FatDevUffCli.Value;
  UfeCli_Ant := fmmandn1_nfe.FatDevUfeCli.Value;

  Id_TraCie_Ant := fmmandn1_nfe.FatDevId_TraCie.Value;
  Id_FinCif_Ant := fmmandn1_nfe.FatDevId_FinCif.Value;
  Id_FinCie_Ant := fmmandn1_nfe.FatDevId_FinCie.Value;

  if Trim(fmmandn1_nfe.FatDevUfeTra.Value) <> '' then begin

     if fmmandn1_nfe.FatDevId_TraUfe.Value = 0 then begin

        with fmmandn1_nfe.quSQL,SQL do begin

             Close;
             Text := ' Select FinUfe.Id_FinUfe From FinUfe Where FinUfe.SigUfe = '+ QuotedStr(fmmandn1_nfe.FatDevUfeTra.Value);
             Open;

             if FieldbyName('Id_FinUfe').AsInteger > 0 then
                fmmandn1_nfe.FatDevId_TraUfe.Value := FieldbyName('Id_FinUfe').AsInteger
             else
                fmmandn1_nfe.FatDevId_TraUfe.Clear;

        end;
     end;
  end;

  if Trim(fmmandn1_nfe.FatDevUffCli.Value) <> '' then begin

     if fmmandn1_nfe.FatDevId_FinUff.Value = 0 then begin

        with fmmandn1_nfe.quSQL,SQL do begin

             Close;
             Text := ' Select FinUfe.Id_FinUfe From FinUfe Where FinUfe.SigUfe = '+ QuotedStr(fmmandn1_nfe.FatDevUffCli.Value);
             Open;

             if FieldbyName('Id_FinUfe').AsInteger > 0 then
                fmmandn1_nfe.FatDevId_FinUff.Value := FieldbyName('Id_FinUfe').AsInteger
             else
                fmmandn1_nfe.FatDevId_FinUff.Clear;

        end;
     end;
  end;

  if Trim(fmmandn1_nfe.FatDevUfeCli.Value) <> '' then begin

     if fmmandn1_nfe.FatDevId_FinUfe.Value = 0 then begin

        with fmmandn1_nfe.quSQL,SQL do begin

             Close;
             Text := ' Select FinUfe.Id_FinUfe From FinUfe Where FinUfe.SigUfe = '+ QuotedStr(fmmandn1_nfe.FatDevUfeCli.Value);
             Open;

             if FieldbyName('Id_FinUfe').AsInteger > 0 then
                fmmandn1_nfe.FatDevId_FinUfe.Value := FieldbyName('Id_FinUfe').AsInteger
             else
                fmmandn1_nfe.FatDevId_FinUfe.Clear;

        end;
     end;
  end;

  if fmmandn1_nfe.FatDevId_TraUfe.Value > 0 then pnId_TraUfe.Caption := IntToStr(fmmandn1_nfe.FatDevId_TraUfe.Value);
  if fmmandn1_nfe.FatDevId_FinUff.Value > 0 then pnId_FinUff.Caption := IntToStr(fmmandn1_nfe.FatDevId_FinUff.Value);
  if fmmandn1_nfe.FatDevId_FinUfe.Value > 0 then pnId_FinUfe.Caption := IntToStr(fmmandn1_nfe.FatDevId_FinUfe.Value);

  if Id_TraCie_Ant > 0 then begin

     with fmmandn1_nfe.quSQL,SQL do begin

          Close;
          Text := ' Select FinCie.NomCie,'+
                  '        FinCie.SigNfe '+
                  ' From FinCie'+
                  ' Where FinCie.Id_FinCie = '+ QuotedStr(IntToStr(Id_TraCie_Ant));
          Open;

          pnNomCia.Caption := Trim(FieldbyName('NomCie').AsString)+' IBGE: '+Trim(FieldbyName('SigNFE').AsString);

     end;
  end;

  if Id_FinCif_Ant > 0 then begin

     with fmmandn1_nfe.quSQL,SQL do begin

          Close;
          Text := ' Select FinCie.NomCie,'+
                  '        FinCie.SigNfe '+
                  ' From FinCie'+
                  ' Where FinCie.Id_FinCie = '+ QuotedStr(IntToStr(Id_FinCif_Ant));
          Open;

          pnNomCif.Caption := Trim(FieldbyName('NomCie').AsString)+' IBGE: '+Trim(FieldbyName('SigNFE').AsString);

     end;
  end;

  if Id_FinCie_Ant > 0 then begin

     with fmmandn1_nfe.quSQL,SQL do begin

          Close;
          Text := ' Select FinCie.NomCie,'+
                  '        FinCie.SigNfe '+
                  ' From FinCie'+
                  ' Where FinCie.Id_FinCie = '+ QuotedStr(IntToStr(Id_FinCie_Ant));
          Open;

          pnNomCie.Caption := Trim(FieldbyName('NomCie').AsString)+' IBGE: '+Trim(FieldbyName('SigNFE').AsString);

     end;
  end;

  fmmandn1_nfe.FatDev.Edit;

  if fmmandn1_nfe.FatDevInfBrt.Value = 0 then fmmandn1_nfe.FatDevInfBrt.Value := fmmandn1_nfe.FatDevTotBrt.Value;
  if fmmandn1_nfe.FatDevInfLiq.Value = 0 then fmmandn1_nfe.FatDevInfLiq.Value := fmmandn1_nfe.FatDevTotLiq.Value;

  with fmmandn1_nfe.quSQL,SQL do begin

       Close;
       Text := ' Select FatDv2.CodCfo,'+
               '        Count(*) as QtdReg'+
               ' From FatDv2'+
               ' Where FatDv2.CodEmp = '+ QuotedStr(IntToStr(fmmandn1_nfe.FatDevCodEmp.Value)) +
               '   and FatDv2.DteRes = '+ QuotedStr(fDateToSQL(fmmandn1_nfe.FatDevDteRes.Value)) +
               '   and FatDv2.NumRes = '+ QuotedStr(IntToStr(fmmandn1_nfe.FatDevNumRes.Value)) +
               '   and FatDv2.SeqLib = '+ QuotedStr(IntToStr(fmmandn1_nfe.FatDevSeqLib.Value)) +
               '   and FatDv2.SeqFat = '+ QuotedStr(IntToStr(fmmandn1_nfe.FatDevSeqFat.Value)) +
               '   and FatDv2.SeqDev = '+ QuotedStr(IntToStr(fmmandn1_nfe.FatDevSeqDev.Value)) +
               ' Group by FatDv2.CodCfo'+
               ' Order by Count(*) Desc';
       Open;
       First;

  end;

  if Trim(fmmandn1_nfe.quSQL.FieldbyName('CodCfo').AsString) <> '' then begin
  
     fmmandn1_nfe.FatDevCodCf1.Value := Trim(fmmandn1_nfe.quSQL.FieldbyName('CodCfo').AsString);

     if not fmmandn1_nfe.quSQL.EOF then begin

        fmmandn1_nfe.quSQL.Next;

        if Trim(fmmandn1_nfe.quSQL.FieldbyName('CodCfo').AsString) <> '' then begin

           if Trim(fmmandn1_nfe.quSQL.FieldbyName('CodCfo').AsString) <> fmmandn1_nfe.FatDevCodCf1.Value then
              fmmandn1_nfe.FatDevCodCf2.Value := Trim(fmmandn1_nfe.quSQL.FieldbyName('CodCfo').AsString);
           
           if not fmmandn1_nfe.quSQL.EOF then begin
              
              fmmandn1_nfe.quSQL.Next;

              if Trim(fmmandn1_nfe.quSQL.FieldbyName('CodCfo').AsString) <> '' then begin

                 if Trim(fmmandn1_nfe.quSQL.FieldbyName('CodCfo').AsString) <> fmmandn1_nfe.FatDevCodCf1.Value then begin

                    if Trim(fmmandn1_nfe.quSQL.FieldbyName('CodCfo').AsString) <> fmmandn1_nfe.FatDevCodCf2.Value then
                       fmmandn1_nfe.FatDevCodCf2.Value := Trim(fmmandn1_nfe.FatDevCodCf2.Value)+'/'+Trim(fmmandn1_nfe.quSQL.FieldbyName('CodCfo').AsString);

                 end;   
              end;
           end;   
        end;
     end;
  end;

  fmmandn1_nfe.quSQL.Close;

  if TrimLeft(TrimRight(fmmandn1_nfe.FatDevCgeCli.Value)) <> '' then begin

     if Length(TrimLeft(TrimRight(fmmandn1_nfe.FatDevCgeCli.Value))) > 11 then
        fmmandn1_nfe.FatDevCgeCli.EditMask := '!99.999.999/9999\-99;0;'
     else
        fmmandn1_nfe.FatDevCgeCli.EditMask := '!999.999.999\-99;0;';

     end
  else
     fmmandn1_nfe.FatDevCgeCli.EditMask := '';

  if TrimLeft(TrimRight(fmmandn1_nfe.FatDevCgcTra.Value)) <> '' then begin

     if TrimLeft(TrimRight(fmmandn1_nfe.FatDevCgcTra.Value)) <> '' then
        fmmandn1_nfe.FatDevCgcTra.EditMask := '!99.999.999/9999\-99;0;'
     else
        fmmandn1_nfe.FatDevCgcTra.EditMask := '';

     end
  else
     fmmandn1_nfe.FatDevCgcTra.EditMask := '';

  EdDesNat.SetFocus;

end;

procedure TfmManDn2_NFE.EdCgeCliExit(Sender: TObject);
begin
  if TrimLeft(TrimRight(fmmandn1_nfe.FatDevCgeCli.Value)) <> '' then begin

     if Length(TrimLeft(TrimRight(fmmandn1_nfe.FatDevCgeCli.Value))) > 11 then
        fmmandn1_nfe.FatDevCgeCli.EditMask := '!99.999.999/9999\-99;0;'
     else
        fmmandn1_nfe.FatDevCgeCli.EditMask := '!999.999.999\-99;0;';

     end
  else
     fmmandn1_nfe.FatDevCgeCli.EditMask := '';
end;

