end;

procedure TfmManDn2_NFE.EdCodTraExit(Sender: TObject);
begin
  inherited;
  if fmmandn1_nfe.FatDevCodTra.Value <> CodTra_Ant then begin

     CodTra_Ant := fmmandn1_nfe.FatDevCodTra.Value;
     
     if fmmandn1_nfe.FatDevCodTra.Value > 0 then begin

        with fmmandn1_nfe.quSQL,SQL do begin

             Close;
             Text := ' Select FinTra.NomTra,'+
                     '        FinTra.CgcTra,'+
                     '        FinTra.InsTra,'+                  
                     '        FinTra.CepTra,'+
                     '        FinTra.TenTra,'+
                     '        FinTra.EndTra,'+
                     '        FinTra.NumTra,'+
                     '        FinTra.RefTra,'+
                     '        FinTra.BaiTra,'+
                     '        FinTra.CidTra,'+
                     '        FinTra.SigUfe,'+
                     '        FinTra.Id_FinUfe,'+
                     '        FinTra.Id_FinCie '+
                     ' From FinTra'+
                     ' Where FinTra.CodTra = '+ QuotedStr(IntToStr(CodTra_Ant));
             Open;

             fmmandn1_nfe.FatDevNomTra.Value := Trim(FieldbyName('NomTra').AsString);
             fmmandn1_nfe.FatDevCgcTra.Value := Trim(FieldbyName('CgcTra').AsString);
             fmmandn1_nfe.FatDevInsTra.Value := Trim(FieldbyName('InsTra').AsString);
             fmmandn1_nfe.FatDevTenTra.Value := Trim(FieldbyName('TenTra').AsString);
             fmmandn1_nfe.FatDevEndTra.Value := Trim(FieldbyName('EndTra').AsString);
             fmmandn1_nfe.FatDevRefTra.Value := Trim(FieldbyName('RefTra').AsString);
             fmmandn1_nfe.FatDevBaiTra.Value := Trim(FieldbyName('BaiTra').AsString);
             fmmandn1_nfe.FatDevCidTra.Value := Trim(FieldbyName('CidTra').AsString);
             fmmandn1_nfe.FatDevUfeTra.Value := Trim(FieldbyName('SigUfe').AsString);
             fmmandn1_nfe.FatDevCepTra.Value := Trim(FieldbyName('CepTra').AsString);

             UfeTra_Ant := fmmandn1_nfe.FatDevUfeTra.Value;

             if FieldbyName('Id_FinUfe').AsInteger > 0 then begin

                fmmandn1_nfe.FatDevId_TraUfe.Value := FieldbyName('Id_FinUfe').AsInteger;

                pnId_TraUfe.Caption := IntToStr(fmmandn1_nfe.FatDevId_TraUfe.Value);

             end;   

             if FieldbyName('Id_FinCie').AsInteger > 0 then begin

                fmmandn1_nfe.FatDevId_TraCie.Value := FieldbyName('Id_FinCie').AsInteger;

                Id_TraCie_Ant := fmmandn1_nfe.FatDevId_TraCie.Value;

                with fmmandn1_nfe.quSQL,SQL do begin

                     Close;
                     Text := ' Select FinCie.NomCie,'+
                             '        FinCie.SigNfe '+
                             ' From FinCie'+
                             ' Where FinCie.Id_FinCie = '+ QuotedStr(IntToStr(Id_TraCie_Ant));
                     Open;

                     pnNomCia.Caption := Trim(FieldbyName('NomCie').AsString)+' IBGE: '+Trim(FieldbyName('SigNFE').AsString);

                end;
             end;

             EdNomTra.Text := fmmandn1_nfe.FatDevNomTra.Value;
             EdCgcTra.Text := fmmandn1_nfe.FatDevCgcTra.Value;
             EdInsTra.Text := fmmandn1_nfe.FatDevInsTra.Value;
             EdTenTra.Text := fmmandn1_nfe.FatDevTenTra.Value;
             EdEndTra.Text := fmmandn1_nfe.FatDevEndTra.Value;
             EdNumTra.Text := fmmandn1_nfe.FatDevNumTra.Value;
             EdRefTra.Text := fmmandn1_nfe.FatDevRefTra.Value;
             EdBaiTra.Text := fmmandn1_nfe.FatDevBaiTra.Value;
             EdCidTra.Text := fmmandn1_nfe.FatDevCidTra.Value;
             EdUfeTra.Text := fmmandn1_nfe.FatDevUfeTra.Value;
             EdCepTra.Text := fmmandn1_nfe.FatDevCepTra.Value;

             if fmmandn1_nfe.FatDevId_TraCie.Value > 0 then
                EdId_TraCie.Text := IntToStr(fmmandn1_nfe.FatDevId_TraCie.Value);

        end;

        end
     else
        begin

        fmmandn1_nfe.FatDevNomTra.Clear;
        fmmandn1_nfe.FatDevCgcTra.Clear;
        fmmandn1_nfe.FatDevInsTra.Clear;
        fmmandn1_nfe.FatDevTenTra.Clear;
        fmmandn1_nfe.FatDevEndTra.Clear;
        fmmandn1_nfe.FatDevRefTra.Clear;
        fmmandn1_nfe.FatDevBaiTra.Clear;
        fmmandn1_nfe.FatDevCidTra.Clear;
        fmmandn1_nfe.FatDevUfeTra.Clear;
        fmmandn1_nfe.FatDevCepTra.Clear;

        Id_TraCie_Ant := fmmandn1_nfe.FatDevId_TraCie.Value;

        pnId_TraUfe.Caption := '';

        pnNomCia.Caption := '';

     end;
  end;
end;

procedure TfmManDn2_NFE.EdCodTraKeyDown(Sender: TObject; var Key: Word;
  Shift: TShiftState);
var
  CodTra : integer;
begin
  inherited;
  if key = 112 then begin {F1 - Iniciais}

     try

        fmAuxIni := TfmAuxIni.Create(Self);

        fmAuxIni.TipoPesq := 'T';

        fmAuxIni.ShowModal;

        if fmAuxIni.CodTra > 0 then begin

           CodTra := fmAuxIni.CodTra;

           fmmandn1_nfe.FatDevCodTra.Value := fmAuxIni.CodTra;

           EdCodTra.Text := IntToStr(fmAuxIni.CodTra);

        end;

     finally

        FreeAndNil(fmAuxIni);

     end;

     if CodTra > 0 then EdCodTra.OnExit(Sender);

  end;

  if key = 113 then begin {F2 - Inteligente}

     try

        fmAuxPsq := TfmAuxPsq.Create(Self);

        fmAuxPsq.TipoPesq := 'T';

        fmAuxPsq.ShowModal;

        if fmAuxPsq.CodTra > 0 then begin

           CodTra := fmAuxPsq.CodTra;

           fmmandn1_nfe.FatDevCodTra.Value := fmAuxPsq.CodTra;

           EdCodTra.Text := IntToStr(fmAuxPsq.CodTra);

        end;

     finally

        FreeAndNil(fmAuxPsq);

     end;

     if CodTra > 0 then EdCodTra.OnExit(Sender);

  end;
end;

procedure TfmManDn2_NFE.EdCodTraKeyPress(Sender: TObject; var Key: Char);
begin
  inherited;
  if not ( key in [ '0'..'9' ] ) then key := #0;
end;

